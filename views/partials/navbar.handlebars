<script
  src="https://code.jquery.com/jquery-3.6.0.js"
  integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
  crossorigin="anonymous"></script>

<nav class="navbar navbar-dark bg-dark fixed-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <img src="/img/logo.jpg" width="50" height="auto">
    </a>
    {{#if newSmile}}
    <a href="/showSmile/{{newSmile._id}}"><i class="fa fa-gratipay"></i></a>
    <style>
      .fa-gratipay {
        font-size: 35px;
      }
    </style>
    <script>
      $(document).ready(function(){
        setInterval(function(){
          $('.fa-gratipay').attr('style','color:red');
        },10)
        setInterval(function(){
          $('.fa-gratipay').attr('style','color:white');
        },20)
      })
    </script>
    {{else}}
    <a class="navbar-brand" href="#">{{title}}</a>
    {{/if}}

    {{#if unread}}
    <a href="/chats" class="navbar-brand">
      <i class="fa fa-envelope-o" id="letter"></i>
    </a>
    <script>
      $(document).ready(function(){
        setInterval(function(){
          $('#letter').attr('style','color:green');
        },10)
        setInterval(function(){
          $('#letter').attr('style','color:yellow');
        },35)
      })
    </script>
    {{/if}}

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        {{#if user}}
        <li class="nav-item">
          <a class="nav-link" href="/singles">
            <i class="fa fa-group"> Singles</i>
          </a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/profile">
            <i class="fa fa-user"> Profile</i>
          </a>
        </li>

         <li class="nav-item">
          <a class="nav-link" href="/chats">
            <i class="fa fa-commenting"> Chat</i>
          </a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/logout">
            <i class="fa fa-sign-out"> Logout</i>
          </a>
        </li>
        {{else}}
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/about">About</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/contact">Contact</a>
        </li>
        {{/if}}
        
      </ul>
